/* styles.css */

body {
font-family: 'Arial', sans-serif;
margin: 0;
padding: 0;
background-color: #f5f5f5;
}

h2 {
text-align: center;
margin: 20px;
color: #333;
}

.container {
width: 80%;
margin: 0 auto;
background-color: #fff;
padding: 20px;
border-radius: 8px;
box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
margin-top: 40px;
}

table {
width: 100%;
border-collapse: collapse;
margin-bottom: 20px;
}

thead {
background-color: #007bff;
color: white;
}

th, td {
padding: 10px;
border: 1px solid #ddd;
text-align: left;
}

tr:nth-child(even) {
background-color: #f2f2f2;
}

form {
display: flex;
align-items: center;
gap: 10px;
}

input[type="number"] {
width: 60px;
}

input[type="submit"] {
background-color: #28a745;
color: white;
border: none;
padding: 5px 10px;
border-radius: 4px;
cursor: pointer;
}

input[type="submit"]:hover {
background-color: #218838;
}

a {
text-decoration: none;
color: #007bff;
}

a:hover {
text-decoration: underline;
}

